
<h1 class="mt-4 mb-4 text-center">Statistics</h1>


<table class="table table-striped table-dark table-borderless table-hover text-center">
  <thead class="thead-dark">
  <tr>
    <th>Country</th>
    <th>New Confirmed</th>
    <th>Total Confirmed</th>
    <th>New Deaths</th>
    <th>Total Deaths</th>
    <th>New Recovered</th>
    <th>Total Recovered</th>
  </tr>
</thead>
<tbody>

<tr>
        <td><%= "WorldWide" %></td>
        <td><%= @cases["Global"]["NewConfirmed"] %></td>
        <td><%= @cases["Global"]["TotalConfirmed"] %></td>
        <td><%= @cases["Global"]["NewDeaths"] %></td>
        <td><%= @cases["Global"]["TotalDeaths"] %></td>
        <td><%= @cases["Global"]["NewRecovered"] %></td>
        <td><%= @cases["Global"]["TotalRecovered"] %></td>
        </tr>
        <tr>
        <% @cases['Countries'].each do |country| %>
        <td><%= country["Country"] %></td>
        <td><%= country["NewConfirmed"] %></td>
        <td><%= country["TotalConfirmed"] %></td>
        <td><%= country["NewDeaths"] %></td>
        <td><%= country["TotalDeaths"] %></td>
        <td><%= country["NewRecovered"] %></td>
        <td><%= country["TotalRecovered"] %></td>
      
      </tr>
      <% end %>





   
  </tbody>
</table>